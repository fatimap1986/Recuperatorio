<%- include('./partials/head.ejs') %>

    <body>
            <div class="container main-container" style="margin-top: 100px;">
                <div class="h-100 p-5 bg-light border rounded-3 animated fadeIn">
                    <div class="card container animated fadeIn">
                        <div class="row animated fadeIn">
                            <div class="col-md-12">
                                <div class="well well-sm">
                                    <form class="form-horizontal" method="post" action="./products" enctype="multipart/form-data">
                                        <fieldset>
                                            <br>
                                            <legend class="text-center header">Agregar producto</legend>
                                            <br><br>
                                            <div class="form-group">
                                                <span class="col-md-1 col-md-offset-2 text-center"></span>
                                                <div class="col-md-4">
                                                    <input id="name" name="name" type="text" placeholder="Nombre" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group mt-2">
                                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                                                <div class="col-md-12">
                                                    <textarea class="form-control" id="bio" name="bio" placeholder="Ingrese una descripcion" rows="7"></textarea>
                                                </div>
                                            </div>
    
                    
                                            <div class="form-group mt-2">
                                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                                                <div class="col-md-4">
                                                    <input class="form-control" id="imgFile" name="imgFile" type="file" />
                                                </div>
                                            </div>
                    
                                            <div class="form-group mt-2">
                                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa-solid fa-circle-dollar"></i></span>
                                                <div class="col-md-2">
                                                    <input id="casa" name="casa" type="text" placeholder="Precio" class="form-control">
                                                </div>
                                            </div>
                    
                    
                                            <div class="form-group mt-3 mb-3">
                                                <div class="col-md-12 text-center">
                                                    <button type="submit" class="btn btn-primary btn-lg">Crear</button>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include('./partials/footer.ejs') %>