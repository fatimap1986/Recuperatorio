<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>
            <div class="container main-container" style="margin-top: 100px;">
                <h1>Productos<small style="font-weight: 300"></small></h1>
                <hr>

                <div class="row row-cols-1 row-cols-md-3 g-4">

                    <% products.forEach(product=> { %>

                        <div class="col">
                            <div class="card animated fadeIn">
                                <img src="/images/<%= product.img %> " class="card-img-top img-fluid" alt="<%- product.nombre %>">
                                <div class="card-body">
                                    <h4 class="card-title"><%= product.nombre %></h4>
                                    <a href="/products/detail/<%= product.id %>" class="btn btn-outline-primary btn-block">Ver m√°s...</a>

                                </div>
                            </div>
                        </div>

                        <% }); %>

                </div>
            </div>
            <%- include('./partials/footer.ejs') %>