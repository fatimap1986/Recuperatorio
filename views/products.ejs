<head><%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/index.css">
</head>
<body>
    <header> <%- include('./partials/header.ejs') %></header>
    <div class="container-main-container">
        <div><img style="width: 100%;" src="/images/bannerproductos.jpg" alt=""></div>
        <!-- <h1>Productos<small style="font-weight: 300"></small></h1> -->
        <hr>

        <div class="row-products">

            <% products.forEach(product=> { %>

                <div class="col-product">
                    <div class="card-product" >
                        <img src="/images/<%= product.img %> " class="card-img-top img-fluid"
                            alt="<%- product.nombre %>">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= product.nombre %>
                            </h4>
                            <a href="/products/detail/<%= product.id %>" class="btn btn-outline-primary btn-block">Ver
                                m√°s...</a>

                        </div>
                    </div>
                </div>

                <% }); %>

        </div>
    </div>
    <footer> <%- include('./partials/footer.ejs') %> </footer>