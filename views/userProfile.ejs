    <h3>Usuario: <%= user.usuario %></h3>
    <br>
    <h3>Direccion de Domicilio: <%= user.direccion %></h3>
    <br>
    <h4>Fecha de Nacimiento: <%= user.fecha_nacimiento %></h4>
    </div>
    
    <div class="contenedorBotonEditar">
    <form action="/logout" method="post"><button type="submit" class="botonEdicionPerfil">Log out</button></form>
    <form action="/profile/edit/<%= user.id %>" method="get"><button type="submit" class="botonEdicionPerfil">Editar Datos</button></form>
</div>
</div><div class="contenedorPerfilSub2"><img class="imagenMontaña" src="/images/montañasperfil.jpg" alt=""></div>
</div>
 
